{
  "name": "tokopaedi-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "preview": "vite preview",
    "test": "vitest",
    "vitest": "vitest",
    "typecheck": "tsc -b --noEmit",
    "test:e2e": "playwright test",
    "test:e2e:ci": "playwright test --reporter=line",
    "prepare": "husky",
    "gen:openapi:iam:types": "openapi-typescript ./openapi/iam.yaml --output src/generated/openapi/iam/types.ts",
    "gen:openapi:catalog:types": "openapi-typescript ./openapi/catalog.yaml --output src/generated/openapi/catalog/types.ts",
    "gen:openapi:auth:types": "openapi-typescript ./openapi/auth.yaml --output src/generated/openapi/auth/types.ts",
    "gen:openapi:profile:types": "openapi-typescript ./openapi/profile.yaml --output src/generated/openapi/profile/types.ts",
    "gen:openapi:iam:zod": "node scripts/gen-ozc-schemas-only.mjs ./openapi/iam.yaml src/generated/openapi/iam/schemas.ts",
    "gen:openapi:catalog:zod": "node scripts/gen-ozc-schemas-only.mjs ./openapi/catalog.yaml src/generated/openapi/catalog/schemas.ts",
    "gen:openapi:auth:zod": "node scripts/gen-ozc-schemas-only.mjs ./openapi/auth.yaml src/generated/openapi/auth/schemas.ts",
    "gen:openapi:profile:zod": "node scripts/gen-ozc-schemas-only.mjs ./openapi/profile.yaml src/generated/openapi/profile/schemas.ts",
    "gen:openapi:iam": "npm run gen:openapi:iam:types && npm run gen:openapi:iam:zod",
    "gen:openapi:catalog": "npm run gen:openapi:catalog:types && npm run gen:openapi:catalog:zod",
    "gen:openapi:auth": "npm run gen:openapi:auth:types && npm run gen:openapi:auth:zod",
    "gen:openapi:profile": "npm run gen:openapi:profile:types && npm run gen:openapi:profile:zod",
    "gen:openapi:all": "npm run gen:openapi:iam && npm run gen:openapi:catalog && npm run gen:openapi:auth && npm run gen:openapi:profile"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.2.4",
    "@chakra-ui/react": "^2.10.9",
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.0",
    "@hookform/resolvers": "^5.2.1",
    "@tanstack/react-query": "^5.87.1",
    "axios": "^1.11.0",
    "framer-motion": "^10.18.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-easy-crop": "^5.5.2",
    "react-hook-form": "^7.62.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^6.30.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.48.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.3.1",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.21",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.6",
    "msw": "^2.11.1",
    "openapi-typescript": "^7.5.3",
    "openapi-zod-client": "^1.18.3",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
